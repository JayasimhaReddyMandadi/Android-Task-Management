<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#E0E0E0"/>
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>

    <!-- Default User Icon -->
    <item
        android:top="24dp"
        android:right="24dp"
        android:bottom="24dp"
        android:left="24dp">
        <shape android:shape="oval">
            <solid android:color="#BDBDBD"/>
        </shape>
    </item>

    <!-- Head Circle -->
    <item
        android:top="30dp"
        android:right="45dp"
        android:bottom="60dp"
        android:left="45dp">
        <shape android:shape="oval">
            <solid android:color="#E0E0E0"/>
        </shape>
    </item>

    <!-- Body -->
    <item
        android:top="65dp"
        android:right="35dp"
        android:bottom="24dp"
        android:left="35dp">
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
            <solid android:color="#E0E0E0"/>
        </shape>
    </item>
</layer-list>