<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Normal state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="#281430" /> <!-- Background color -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#281430" /> <!-- Darker color when pressed -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#281430" /> <!-- Disabled color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
