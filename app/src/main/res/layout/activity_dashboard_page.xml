<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/dashboard_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Manager"
                android:textSize="28sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>

            <!-- First Row: Total Tasks and Completed Tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Total Tasks Box -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#E8F5FE"
                    android:elevation="3dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/total_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Tasks"
                        android:textSize="18sp"
                        android:textColor="#1976D2"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/total_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textColor="#1565C0"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Completed Tasks Box -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#E0F2F1"
                    android:elevation="3dp">

                    <TextView
                        android:id="@+id/completed_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed Tasks"
                        android:textSize="18sp"
                        android:textColor="#00796B"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/completed_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textColor="#00695C"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row: Pending Tasks and On Hold Tasks -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">

                <!-- Pending Tasks Box -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#FCE4EC"
                    android:elevation="3dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/pending_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending Tasks"
                        android:textSize="18sp"
                        android:textColor="#C2185B"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/pending_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textColor="#AD1457"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- On Hold Tasks Box -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="16dp"
                    android:background="#EDE7F6"
                    android:elevation="3dp">

                    <TextView
                        android:id="@+id/on_hold_tasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="On Hold Tasks"
                        android:textSize="18sp"
                        android:textColor="#5E35B1"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/on_hold_task_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="32sp"
                        android:textColor="#4527A0"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Buttons Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btn_create_task"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Create Task"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#4CAF50"
                    android:padding="12dp"/>

                <Button
                    android:id="@+id/btn_apply_filters"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Apply Filters"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2196F3"
                    android:padding="12dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Available Tasks"
                android:textSize="22sp"
                android:textColor="#2C3E50"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tasks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                android:paddingBottom="80dp"
                android:visibility="visible"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>